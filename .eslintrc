{
    "extends": ["airbnb", "prettier", "prettier/react"],
    "env": {
        "jest": true
    },
    "globals": {
        "document": true
    },
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js"]
            }
        ],
        "react/prop-types": 0
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["./src"],
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}